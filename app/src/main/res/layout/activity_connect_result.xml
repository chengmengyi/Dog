<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/bg_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/result_bg_selector" />
    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_finish"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_result_connect_status"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/result_status_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_finish"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_result_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:text="Connected"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_result_connect_status"/>
    <View
        android:id="@+id/result_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/bg_result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result_status"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_server_bg"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_margin="16dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:background="@drawable/result_server_bg_selector"
        app:layout_constraintTop_toTopOf="@id/result_bottom_bg">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_result_icon"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:src="@drawable/fast"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result_server_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="Super Fast Server"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="00:00:00"
            android:textColor="@drawable/result_time_color_selector"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>