<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOG"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/connect_idle"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/connect_idle"
        app:layout_constraintTop_toBottomOf="@id/top_title"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/connecting_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:lottie_loop="true"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        android:layout_marginTop="10dp"
        app:lottie_fileName="connecting.zip"
        app:layout_constraintTop_toBottomOf="@id/top_title"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/choose_server"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_b2dbf6_6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_connect_btn"
        app:layout_constraintBottom_toBottomOf="@id/iv_connect_btn">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_server_icon"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:src="@drawable/fast" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_server_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#003333"
            android:text="Super Fast Server"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/right2"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_btn"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/connect_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_ad"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_status"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/connect_btn_icon"
        app:layout_constraintTop_toTopOf="@id/iv_connect_btn"
        app:layout_constraintLeft_toLeftOf="@id/iv_connect_btn"
        app:layout_constraintRight_toRightOf="@id/iv_connect_btn"
        app:layout_constraintBottom_toBottomOf="@id/iv_connect_btn"/>
    <include
        android:id="@+id/bottom_ad"
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:layout_margin="14dp"
        layout="@layout/layout_native_ad"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>